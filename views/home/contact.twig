{% extends "layouts/app.twig" %}

{% block header %}
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/contact.css">
{% endblock %}

{% block body %}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <div class="white-square1">
                <div class="container mb-3">
                    <h3 class="contact">Contact Details</h3>
                    <p><b>Location:</b> Tokyo, Japan</p>
                    <p><b>Address:</b> Japan, 〒150-0001 Tokyo, Shibuya City, Jingumae, 6 Chome−12−22 秋田ビル ２階</p>
                    <p><b>Phone number:</b> +81 3-6812-9933</p>
                    <p><b>E-mail:</b> OnePuncherBaby@hotmail.com</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="content">
                <div class="container">
                    <div class="row align-items-stretch no-gutters contact-wrap">
                        <div class="col-md-12">
                            <div class="form h-100">
                                <h3>Send us a message</h3>
                                <form class="mb-5" method="post" id="contactForm" name="contactForm">
                                    <div class="row">
                                        <div class="col-md-6 form-group mb-5">
                                            <label for="name" class="col-form-label">Name *</label>
                                            <input type="text" class="form-control" name="name" id="name" placeholder="Your name">
                                        </div>
                                        <div class="col-md-6 form-group mb-5">
                                            <label for="email" class="col-form-label">Email *</label>
                                            <input type="text" class="form-control" name="email" id="email"  placeholder="Your email">
                                        </div>
                                    </div>
                                    <h2>Contact</h2>
                                    <div class="row">
                                        <div class="col-md-6 form-group mb-5">
                                            <label for="phone" class="col-form-label">Phone</label>
                                            <input type="text" class="form-control" name="phone" id="phone"  placeholder="Phone #">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 form-group mb-5">
                                            <label for="message" class="col-form-label">Message *</label>
                                            <textarea class="form-control" name="message" id="message" cols="30" rows="4"  placeholder="Write your message"></textarea>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 form-group">
                                            <input type="submit" value="Send Message" class="btn btn-danger rounded-0 py-2 px-4">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}