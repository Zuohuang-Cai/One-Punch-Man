{% extends "layouts/app.twig" %}

{% block header %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="/assets/css/test.css">
    </head>
{% endblock %}

{% block body %}
    <!-- News -->
    <div class="row justify-content-center my-5 mx-0">
        <div class="col-md-6">
            <div class="red-square d-flex flex-column align-items-center">
                <h3 style="text-align: center; font-size: 30px;">Today's News</h3>
                <div class="marquee-container d-flex align-items-center">
                    <img src="/assets/images/watchdogman.png" alt="Hero-Image" class="mr-3" style="width: 90px; border-radius: 15%;">
                    <marquee behavior="scroll" direction="left" style="text-align: center; font-size: 20px;">The Watchdog Man known
                        only as "Invisible Guardian" shielded innocent bystanders from harm during a massive car
                        accident downtown. Witnesses report seeing the hero appear out of thin air to lend
                        assistance.
                    </marquee>
                </div>
            </div>
        </div>
    </div>

<div class="container my-5" style="border-radius: 20px; padding-bottom:30px; padding-top:10px; box-shadow: 0 0 40px rgba(0, 0, 0, 0.3); border: 1px solid black; background-image: url('../assets/images/blackhole.gif'); background-size: 550px 200px;" id="water">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 class="ourhero mb-4"style="color: white;">Our Heroes</h1>
        </div>
    </div>

    <div class="row justify-content-between">
        <div class="col-md-4 text-right"  style="width: 150px;">
            <a class="button-82-pushable" role="button" id="knop_terug" style="text-decoration : none">
                <span class="button-82-shadow"></span>
                <span class="button-82-edge"></span>
                <span class="button-82-front text">Back</span>
            </a>
        </div>

        <div class="col-md-4 text-center">
            <div class="d-flex justify-content-between">
                <div class="col-md-3 mx-4 d-flex justify-content-start" id="vierkant1">
                    <div class="white-square"></div>
                </div>
                <div class="col-md-3 mx-3 d-flex justify-content-center" id="vierkant2">
                    <div class="white-square"></div>
                </div>
                <div class="col-md-3 mx-5 d-flex justify-content-end" id="vierkant3">
                    <div class="white-square"></div>
                </div>
            </div>
        </div>

        <div class="col-md-4 text-left" style="width: 150px;">
            <a class="button-82-pushable" role="button" id="knop_volgende" style="text-decoration : none">
                <span class="button-82-shadow"></span>
                <span class="button-82-edge"></span>
                <span class="button-82-front text">Next</span>
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block script %}
    <script src="/assets/js/home.js"></script>
{% endblock %}

