{% extends "layouts/app.twig" %}

{% block header %}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
              crossorigin="anonymous">
        <link rel="stylesheet" href="/assets/css/showhero.css">

    </head>
{% endblock %}
{% block body %}
    <div id="showhero">
        <div class="container">
            <div class="d-flex">
                <div class="d-flex row" style="max-width: 20rem">
                    <div class="d-flex row justify-content-between" >
                        <span class="text-center">Hero_Id : </span>
                        <h1 class="text-center" id="hero_id">{{ hero_id }}</h1>
                        <h1 id="hero_nickname" class="text-center">nickname</h1>
                    </div>
                </div>
                <div >
                    <h1 class="text-center">powers</h1>
                    <div id="infocontainer" class="d-flex flex-column"></div>
                </div>
            </div>
            <div style="height: 500px;width:500px " class="d-flex align-items-center">
                <img id="hero_image" src="#" alt="hero img">
                <canvas id="radarChart" width="100" height="100"></canvas>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="/assets/js/showhero.js" type="module"></script>
{% endblock %}